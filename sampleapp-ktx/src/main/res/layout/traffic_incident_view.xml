<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/traffic_incident_item_size"
    android:layout_height="@dimen/traffic_incident_item_size"
    android:background="@color/solid_white"
    android:orientation="horizontal"
    android:padding="@dimen/traffic_incident_view_padding">

    <ImageView
        android:id="@+id/trafficIncidentIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/trafficIncidentIconNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/solid_white"
        android:textSize="@dimen/traffic_incident_view_text_size"
        android:textStyle="bold"
        tools:text="3" />

</FrameLayout>