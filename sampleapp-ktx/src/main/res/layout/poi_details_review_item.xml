<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset_large_big"
        android:layout_marginLeft="@dimen/offset_large_big"
        android:layout_marginTop="@dimen/offset_medium"
        android:layout_marginEnd="@dimen/offset_large_big"
        android:layout_marginRight="@dimen/offset_large_big"
        android:textColor="@color/solid_black"
        android:textSize="@dimen/poi_details_date_text_size"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset_large_big"
        android:layout_marginLeft="@dimen/offset_large_big"
        android:layout_marginTop="@dimen/offset_medium"
        android:layout_marginEnd="@dimen/offset_large_big"
        android:layout_marginRight="@dimen/offset_large_big"
        android:textSize="@dimen/poi_details_review_text_size"
        android:textStyle="italic"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_date" />

</androidx.constraintlayout.widget.ConstraintLayout>