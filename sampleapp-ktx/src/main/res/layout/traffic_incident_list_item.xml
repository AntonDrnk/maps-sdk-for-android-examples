<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/offset_small"
    android:background="@color/solid_white"
    android:orientation="horizontal"
    android:padding="@dimen/offset_small">

    <com.tomtom.online.sdk.samples.ktx.cases.traffic.incident.views.TrafficIncidentView
        android:id="@+id/trafficIncidentView"
        android:layout_width="@dimen/no_offset"
        android:layout_height="@dimen/traffic_incident_item_size"
        android:layout_weight="2"
        android:gravity="center" />

    <TextView
        android:id="@+id/trafficIncidentDescription"
        android:layout_width="@dimen/no_offset"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/offset_small"
        android:layout_weight="4"
        android:gravity="center"
        tools:text="Jana Kilińskiego Aleja Marszałka Edwarda Śmigłego-Rydza" />

    <TextView
        android:id="@+id/trafficIncidentDelay"
        android:layout_width="@dimen/no_offset"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="47:55 min" />

    <TextView
        android:id="@+id/trafficIncidentLength"
        android:layout_width="@dimen/no_offset"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="12.4 km" />

</LinearLayout>